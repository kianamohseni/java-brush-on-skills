package java_basics;

public class ControlFlow {

	public static void main(String[] args) {

		int hungry = 7;
		
		if(hungry < 2) {
			System.out.println("I'm not starving");
		} else if (hungry < 4){
			System.out.println("I'm peckish");

		} else if (hungry < 6) {
			System.out.println("I could eat.");

		} else {
			System.out.println("I'm okay, thanks!");

		}
	
	
	int month = 2;
	String monthString;
	
	switch (month) {
	case 1:	monthString = "January";
		break;
	case 2: monthString = "February";
		break;
	case 3: monthString = "March";
		break;
	default: monthString = "Unknown Month";
	
	System.out.println(monthString);
	}
	
	}
	}
