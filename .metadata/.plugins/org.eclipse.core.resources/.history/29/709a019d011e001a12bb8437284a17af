package Loops;

public class myLoopies {

	public static void main(String[] args) {

		String str = "We have a large inventory of things in our warehouse falling in"
				+ "the category:apparel and the slightly "
				+ "more in demand category:makeup";
		
		printCategories(str);
	}
	public static void printCategories(String str) {
		int i = 0;
		int j =0;
		int strLength = str.length();
		boolean endOfString = false;
		String myString = str;

		while (!endOfString) {
		i = myString.indexOf("category");
		System.out.println(i);

		myString = str.substring(i+9);
		
		j = myString.indexOf(" ");
		strLength = myString.length();
		System.out.println(j);
		System.out.println(strLength);
		System.out.println(myString.substring(0,j));
		
		if (strLength >= 0) {
			endOfString = true;
			System.out.println("end of string reached or passed.");
			}
		}
	}

}
